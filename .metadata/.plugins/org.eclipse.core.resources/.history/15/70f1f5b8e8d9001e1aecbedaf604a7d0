package com.student.Controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.student.Entity.Student;
import com.student.Service.StudentService;

@RestController
@RequestMapping(value = "/studentController")
public class StudentController {

	@Autowired
	StudentService studentService;

	@PostMapping(value = "/saveMulStudentDetails")
	public String saveMulStudentDetails(@RequestBody List<Student> s) {
		return studentService.saveMulStudentDetails(s);
	}

	@GetMapping(value = "/getAllStudentDetails")
	public List<Student> getAllStudentDetails() {
		return studentService.getAllStudentDetails();
	}

	@PutMapping(value = "/updateStudentDetailsByRollNumber")
	public String updateStudentDetailsByRollNumber(@PathVariable int n) {
		return studentService.updateStudentDetailsByRollNumber(n);
	}

}
